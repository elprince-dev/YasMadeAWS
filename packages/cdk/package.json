    "lint": "eslint .",
    "destroy": "cdk destroy",
    "cdk": "cdk",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.9",
    "aws-cdk": "2.1027.0",
